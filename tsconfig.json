{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths":{
      "@/*": ["./*"],
      "@types/*":["types/*"],
      "@lib/*":["lib/*"],
      "@server/*":["server/*"],
    },
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },  "include": ["lib/**/*", "server/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"],
  "typeRoots": ["./types", "./node_modules/@types"],
  "files": ["types/global.d.ts"]
}
