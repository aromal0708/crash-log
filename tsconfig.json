{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths":{
      "@/*": ["./*"],
      "@types/*":["types/*"],
      "@lib/*":["lib/*"],
      "@server/*":["server/*"],
    },
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./","lib/*/*.ts","types","types/global.d.ts", "server/*/*.ts"],
  "exclude": ["node_modules", "dist"]
}
